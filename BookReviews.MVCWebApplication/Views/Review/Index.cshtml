@{
}
@using BookReviews.Models.Dto

@model List<ReviewDto>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">Author Name</th>
                <th scope="col">User Name</th>
                <th scope="col">Star Rating</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.ActionLink("Edit", "Edit", new { id=a.Id })
                    </th>
                    <th scope="row">
                        @Html.ActionLink("Delete", "Delete", new { id=a.Id })
                    </th>
                    <th>
                        @Html.Label(a.BookTitle)
                    </th>
                    <td>
                        @Html.Label(a.AuthorLastName), @Html.Label(a.AuthorFirstName)
                    </td>
                    <td>
                        @Html.Label(a.UserLastName), @Html.Label(a.UserFirstName)
                    </td>
                    <th>
                        @Html.Label(a.StarRatingText)
                    </th>
                    <th>
                        @Html.Label(a.StarRatingValue)
                    </th>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Add New","Add","Author",null, new { @class="btn btn-primary"})
}