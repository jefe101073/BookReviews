@{
    Layout = "../Shared/_Layout";
}

@using BookReviews.Models.Dto

@model List<BookDto>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col">Title</th>
                <th scope="col">Author Last Name</th>
                <th scope="col">Author First Name</th>
                <th scope="col">Star Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var a in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.ActionLink("Edit", "Edit", new { id=a.Id })
                    </th>
                    <th scope="row">
                        @Html.ActionLink("Delete", "Delete", new { id=a.Id })
                    </th>
                    <td>
                        @Html.Label(a.Title)
                    </td>
                    <td>
                        @Html.Label(a.AuthorLastName)
                    </td>
                    <td>
                        @Html.Label(a.AuthorFirstName)
                    </td>
                    <td>
                        @{
                            switch (a.StarRating)
                            {
                                case 1:
                                    <text>
                                        <h3>*</h3>
                                    </text>
                                    break;
                                case 2:
                                    <text>
                                        <h3>**</h3>
                                    </text>
                                    break;
                                case 3:
                                    <text>
                                        <h3>***</h3>
                                    </text>
                                    break;
                                case 4:
                                    <text>
                                        <h3>****</h3>
                                    </text>
                                    break;
                                case 5:
                                    <text>
                                        <h3>*****</h3>
                                    </text>
                                    break;
                                default:
                                    <text>
                                        No Ratings Yet
                                    </text>
                                    break;
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @Html.ActionLink("Add New","Add","Book",null, new { @class="btn btn-primary"})
}